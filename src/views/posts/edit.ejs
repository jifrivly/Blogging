<div class="main-body section-gap mt--30" >

    <div class="container-fluid py-3">
        <div class="row">
            <div class="col col-12 col-sm-12 col-md-2 col-lg-3 col-xl-3"></div>
            <div class="col col-12 col-sm-12 col-md-8 col-lg-6 col-xl-6">
                <div class="card shadow " style="border-color: #8050fa">
                    <h4 class="card-header text-center " style="background-color: #8050fa;">Create new post </h4>
                    <div class="text-center">
                        <img class="card-img-top" style="width: 100vh; height: 50vh;"
                            src="/img/posts/<%=data.image%>"
                            alt="">
                    </div>
                    <form action="/post/edit" method="post">
                        <div class="card-body my-5">
                            <input type="text" name="p_id" value="<%=data._id%>" hidden>
                            <h4 class="card-title">
                                <input type="text" name="heading" placeholder="Enter heading of post" value="<%=data.heading%>"
                                    onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter heading of post'"
                                    required class="single-input">
                            </h4>
                            <p class="card-text">
                                <div class="input-group-icon mt-10">
                                    <div class="icon"><i class="lnr lnr-coffee-cup" aria-hidden="true"></i></div>
                                    <div class="form-select" id="default-select"">
                                    <select name="category" required>
                                        <option disabled >Category</option>
                                        <option value="Food and Travel" <%if(data.category=="Food and Travel"){%>selected<%}%>>Food and Travel</option>
                                        <option value="Travel" <%if(data.category=="Travel"){%>selected<%}%>>Travel</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mt-10">
                                    <textarea name="text" class="single-textarea" placeholder="<%=data.text%>"
                                        onfocus="this.placeholder = ''" onblur="this.placeholder = '<%=data.text%> '"
                                        required></textarea>
                                </div>
                                <div class="mt-10">
                                    <button class="genric-btn primary circle text-uppercase" style="float: right;">Save
                                        and
                                        Post</button>
                                </div>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col col-12 col-sm-12 col-md-2 col-lg-3 col-xl-3"></div>
        </div>
    </div>
</div>