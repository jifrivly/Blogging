<!-- Start main body Area -->
<div class="main-body section-gap mt--30">
    <div class="container box_1170">
        <div class="row">
            <div class="col-lg-8 post-list">
                <!-- Start Post Area -->
                <section class="post-area">
                    <%for(var i = 0; i < userData.posts.length; i++) { %>
                    <div class="single-post-item">
                        <figure>
                            <img class="post-img img-fluid" src="/img/posts/<%=userData.posts[i].image%>" alt="">
                        </figure>
                        <h3><%=userData.posts[i].heading%></h3>
                        <p> <%=userData.posts[i].text%> </p>
                        <a href="/post/edit/<%=userData.posts[i]._id%>" class="primary-btn text-uppercase mt-15"> Edit
                            post &ThickSpace; <i class="fa fa-edit fa-2x"></i></a href="/post/edit/">
                        <a href="/post/delete/<%=userData.posts[i]._id%>"
                            class="border border-danger primary-btn text-danger mt-15" style="float: right;"> <i
                                class="fa fa-trash fa-2x"></i> Delete post </a href="/post/edit/">
                        <div class="post-box">
                            <div class="d-flex">
                                <div>
                                    <a href="/<%=userData.auth.username%>">
                                        <img src="/img/author/<%=userData.auth.image%>" alt="">
                                    </a>
                                </div>
                                <div class="post-meta">
                                    <div class="meta-head">
                                        <a href="/<%=userData.auth.username%>"> <%= userData.auth.name %> </a>
                                    </div>
                                    <div class="meta-details">
                                        <ul>
                                            <li>
                                                <a href="#">
                                                    <span class="lnr lnr-calendar-full"></span>
                                                    <%= userData.posts[i].date %>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#">
                                                    <span class="lnr lnr-picture"></span>
                                                    Image Post
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#">
                                                    <span class="lnr lnr-coffee-cup"></span>
                                                    <%= userData.posts[i].category %>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#">
                                                    <span class="lnr lnr-bubble"></span>
                                                    <%= userData.posts[i].comments %> Comments
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>


                    <nav class="blog-pagination justify-content-center d-flex">
