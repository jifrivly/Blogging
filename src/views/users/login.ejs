<div class="ahole-wrap">
    <div class="container my-4">
        <div class="row">
            <div class="col col-12 col-sm-12 col-md-2 col-lg-3 col-xl-3"></div>
            <div
                class="col col-12 col-sm-12 col-md-8 col-lg-6 col-xl-6 py-3 border border-primary rounded-top rounded-left">
                <h3 class="text-center mb-3"> Login here </h3>
                <hr>
                <form action="/user/login" method="POST" id="login_form">
                    <div class="mt-10">
                        <input type="text" name="username" placeholder="Enter your username" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Enter your username'" required class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="password" name="password" placeholder="Enter Password" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Enter Password'" required class="single-input">
                    </div>
                    <div class="text-right mt-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>

            </div>
            <div class="col col-12 col-sm-12 col-md-2 col-lg-3 col-xl-3"></div>
        </div>
    </div>
